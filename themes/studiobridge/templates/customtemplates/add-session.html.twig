{{ attach_library('studiobridge/iCheck') }}
<div class="row">
  <div class="col-sm-12">
    <h3 class="no-margins p-b-sm">Add New Session</span></h3>
    <h4 class="no-margins">Create a new session by selecting contributors and classification</h4>
  </div>
</div>
<hr class="simple">

<div class="panel panel-default">

<form>
  {{ form.form_build_id }}
  {{ form.form_id }}
  {{ form.form_token }}
  <div class="panel-body">
    <div class="col-lg-8 col-md-9 col-sm-9 col-xs-12 m-l-n">
     <!-- <div class="col-sm-6 m-b-10">
      </div> -->
      <div class="col-sm-6 m-b-10">
        {{form.field_photographer}}
      </div>
      <br>
      <div class="col-sm-6 m-b-10">
        {{form.field_vm}}
      </div>
      <div class="col-sm-6 m-b-10">
        {{form.field_stylish}}
      </div>
      <br>
      <div class="col-sm-8 m-b-10">
        <h4 style="margin-top: 1px;font-weight: 600;font-size: 14px;">Shoot Class <span class="form-required text-danger"> *</span></h4>
        {% for key, options in form.field_shoot_class.widget['#options'] %}
        <div class="col-sm-4 m-l-n">
          <input type="radio" name="iCheck" value="{{key}}">    {{options}}
        </div>
        {% endfor %}

      </div>
      <br>
      <div class="col-sm-12 m-b-10">
        {{form.field_notes}}
        <small class="m-t-n">Note limited to 250 characters</small>
      </div>

      <div class="col-sm-6 m-b-10">
        {{form.field_models}}
      </div>
      <br>


      <div class="col-sm-12 m-t-10">
          <button type="submit"   class="btn btn-complete">Start this session</button>
      </div>

    </div>


  </div>
</form>
</div>
