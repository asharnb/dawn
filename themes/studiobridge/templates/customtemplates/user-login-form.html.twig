{% block content %}
<div class="login-wrapper" id="login-page">


    <div class="login-container bg-login">
        <div class="p-t-50 ">
             <img src="http://www.themeboutique.com/dawn/sites/all/themes/dawn/logo.png" alt="Dawn" style="width: 250px; ">
             <h1>DAWN</h1>

            <div id="form-login" class="p-t-15 login-form" role="form" action="?ls" method="post" name="ls">
                        {{ form.form_build_id }}
                        {{ form.form_id }}

                        {{ form.name }}
                        {{ form.pass }}

                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-primary btn-cons m-t-10 full-width" type="submit">Sign In</button>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
{% endblock %}
